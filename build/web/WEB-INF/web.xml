<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.HomeController</servlet-class>
    </servlet>
    <context-param>
        <param-name>ItemOnPage</param-name>
        <param-value>3</param-value>
    </context-param>
    <servlet>
        <servlet-name>MenuController</servlet-name>
        <servlet-class>controller.MenuController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FindUsController</servlet-name>
        <servlet-class>controller.FindUsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SushiDetailsController</servlet-name>
        <servlet-class>controller.SushiDetailsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/homeController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MenuController</servlet-name>
        <url-pattern>/menuController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FindUsController</servlet-name>
        <url-pattern>/findUsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SushiDetailsController</servlet-name>
        <url-pattern>/sushiDetailsController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
